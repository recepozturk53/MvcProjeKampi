@using MvcProjeKampi.Models;
@model ContactPartialModel

<div class="col-md-3">
    <a href="/WriterPanelMessage/NewMessage" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Seçenekler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                
                <li class="nav-item active">
                    <a href="/WriterPanelMessage/Inbox" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Mesajlar
                        @if(Model.InBoxAmount > 0)
                        {
                            <span class="badge bg-primary float-right">@Model.InBoxAmount</span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/Sendbox" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilenler
                        @if (Model.SendBoxAmount > 0)
                        {
                            <span class="badge bg-primary float-right">@Model.SendBoxAmount</span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/UnReadMessage/" class="nav-link">
                        <i class="far fa-envelope"></i> Okunmamış Mesajlar
                        @if (Model.UnReadAmount > 0)
                        {
                            <span class="badge bg-primary float-right">@Model.UnReadAmount</span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/ReadMessage/" class="nav-link">
                        <i class="far fa-envelope"></i> Okunmuş Mesajlar
                        @if (Model.ReadAmount > 0)
                        {
                            <span class="badge bg-primary float-right">@Model.ReadAmount</span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/Draft/" class="nav-link">
                        <i class="far fa-file-alt"></i> Taslaklar
                        @if (Model.DraftAmount > 0)
                        {
                            <span class="badge bg-primary float-right">@Model.DraftAmount</span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/Delete" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                        @if(Model.DeletedAmount > 0)
                        {
                            <span class="badge bg-primary float-right">@Model.DeletedAmount</span>
                        }
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    
</div>